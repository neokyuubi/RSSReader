@model List<RSSReader.Models.Article>

@{
    // var currentUrl = Context.Request.Path.ToString();
    // var parts = currentUrl.Split('/');
    // var lastPart = parts.LastOrDefault();
}

@if(Model != null)
{
    <h1>Articles</h1>
    <a style="display: block;width: 135px; margin-bottom:20px" asp-action="Articles" asp-controller="Feeds" class="btn btn-primary">Reload</a>


    <h5 style="text-decoration: underline;">Filter</h5>
    
    <div class="">
        <form method="post">
            <div class="row mb-3">
                <div class="col-md-3">
                    <label for="startDate" class="form-label">Start Date:</label>
                    <input type="text" class="form-control" id="startDate">
                </div>
                <div class="col-md-3">
                    <label for="endDate" class="form-label">End Date:</label>
                    <input type="text" class="form-control" id="endDate">
                </div>
                <div class="col-md-3 d-flex align-items-center">
                    <button style="margin-top: 16px; width: 100px" class="btn btn-warning" type="submit">Search</button>
                </div>
            </div>
        </form>
    </div>

    <hr />

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>PubDate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var article in Model)
            {
                <tr>
                    <td>@article.Title</td>
                    <td>@article.PubDate</td>
                </tr>
            }
        </tbody>
    </table>  
}
else
{
    <h1>No Articles for this URL</h1>
}

